<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardElevation="@dimen/elevation"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:textSize="27dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@string/meal_details"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="@string/meal_details_summary"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/view_style"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:id="@+id/meal_category"
                android:text="BBBBBBBBB"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/meal_date"
                android:textSize="20dp"
                android:text="AAAAAA"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_calories"
                android:text="AAAAAA"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_proteins"
                android:text="AAAAAA"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_carbohydrates"
                android:text="AAAAAA"
                android:textSize="20dp"
                android:layout_marginBottom="3dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/total_fats"
                android:text="AAAAAA"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <TextView
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="@string/included_products"
                android:layout_marginRight="@dimen/title_margin"
                android:layout_marginLeft="@dimen/title_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />
            <View
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                style="@style/view_style"
                android:layout_marginBottom="20dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/product_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/meal_details_product_list_item"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>