<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        card_view:cardCornerRadius="@dimen/corner_radius"
        card_view:cardElevation="@dimen/elevation"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="55dp"
        card_view:cardUseCompatPadding="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">
                <TextView
                    android:textSize="27dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="@dimen/title_margin"
                    android:layout_marginLeft="@dimen/title_margin"
                    android:id="@+id/header_edit_add"
                    android:text="@string/bmi_calculator"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/text_input_body_weight"
                    android:layout_gravity="center"
                    app:endIconMode="clear_text"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:hint="@string/body_weight"
                    app:helperText =""
                    app:helperTextTextColor = "@color/red"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_body_weight"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:id="@+id/text_input_height"
                    android:layout_gravity="center"
                    app:helperText =""
                    app:helperTextTextColor = "@color/red"
                    app:endIconMode="clear_text"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:hint="@string/height"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_text_height"
                        android:layout_width="match_parent"
                        android:inputType="numberDecimal"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/calculate_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:text="@string/calculate_BMI">
                </com.google.android.material.button.MaterialButton>
                <TextView
                    android:id="@+id/your_bmi_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twoje BMI wynosi: "
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="5dp"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/your_bmi_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nadwaga"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textColor="@color/red"/>
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="40dp"
                    android:background="@color/gray"
                    android:padding="2dp"
                    android:layout_gravity="center">
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="20dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/table_category"
                            android:textStyle="bold"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bmi"
                            android:textStyle="bold"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/blue_700"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/starvation"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&lt;16,0"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/blue_500"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emaciation"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16,0 - 16,99"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/blue_green"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/underweight"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="17,0 - 18,49"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/green"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/correct"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18,5 - 24,99"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/yellow"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/overweight"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25,0 - 29,99"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/orange"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/first_degree_obesity"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30,0 - 34,99"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/red_base"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/second_degree_obesity"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="35,0 - 39,99"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_width="25dp"
                            android:layout_height="wrap_content"
                            android:background="@color/dark_red"
                            android:layout_margin="2dp"
                            android:padding="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/third_degree_obesity"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="&#8805;40"
                            android:background="#FFFFFF"
                            android:layout_margin="2dp"
                            android:padding="10dp"
                            android:textSize="18dp"/>
                    </TableRow>

                </TableLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>