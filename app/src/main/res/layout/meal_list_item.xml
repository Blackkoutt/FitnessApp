<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/elevation"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    card_view:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:id="@+id/meal_category"
            android:gravity="center"
            android:textSize="26dp"
            android:textStyle="bold"
            android:text="Śniadanie"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/meal_calorific"
            android:text="Łączne ilość kalorii:"
            android:textSize="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/meal_protein"
            android:text="Łączna ilość białka:"
            android:textSize="20dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/meal_carbohydrates"
            android:text="Łączna ilość węglowodanów:"
            android:textSize="20dp"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/meal_fat"
            android:text="Łączna ilość tłuszczy:"
            android:textSize="20dp"
            android:layout_marginRight="@dimen/title_margin"
            android:layout_marginLeft="@dimen/title_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>